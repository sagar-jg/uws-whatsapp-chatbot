# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/uws_chatbot

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=uws-knowledge-base
PINECONE_DIMENSION=1536

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_URL=https://yourdomain.com/webhook/whatsapp

# HubSpot MCP Configuration
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_PORTAL_ID=your_hubspot_portal_id
HUBSPOT_MCP_SERVER_URL=http://localhost:3001

# Web Search Configuration
SERPER_API_KEY=your_serper_api_key
SEARCH_RESULTS_LIMIT=5
SEARCH_TIMEOUT=10

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Conversation Settings
MAX_CONVERSATION_HISTORY=50
CONTEXT_WINDOW_SIZE=4000
MAX_RESPONSE_LENGTH=1000

# Data Freshness Settings
VECTOR_FRESHNESS_THRESHOLD_DAYS=30
WEB_SEARCH_ENABLED=true
WEB_SEARCH_THRESHOLD_SCORE=0.7